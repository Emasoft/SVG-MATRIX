{
  "name": "@emasoft/svg-matrix",
  "version": "1.0.10",
  "description": "Arbitrary-precision matrix, vector and affine transformation library for JavaScript using decimal.js",
  "type": "module",
  "main": "src/index.js",
  "scripts": {
    "test": "node test/examples.js",
    "test:browser": "node test/browser-verify.mjs",
    "test:playwright": "node test/playwright-diagnose.js",
    "ci-test": "npm ci && npm test",
    "prepublishOnly": "npm test",
    "postinstall": "node scripts/postinstall.js || true"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Emasoft/SVG-MATRIX.git"
  },
  "keywords": [
    "matrix",
    "vector",
    "arbitrary-precision",
    "decimal",
    "linear-algebra",
    "affine",
    "transform",
    "svg",
    "geometry",
    "esm",
    "browser",
    "cdn",
    "2d",
    "3d",
    "rotation",
    "translation",
    "homogeneous"
  ],
  "exports": {
    ".": {
      "import": "./src/index.js",
      "default": "./src/index.js"
    }
  },
  "author": "Emasoft",
  "license": "MIT",
  "homepage": "https://github.com/Emasoft/SVG-MATRIX#readme",
  "bugs": {
    "url": "https://github.com/Emasoft/SVG-MATRIX/issues"
  },
  "bin": {
    "svg-matrix": "./bin/svg-matrix.js"
  },
  "engines": {
    "node": ">=24.0.0"
  },
  "files": [
    "src/",
    "bin/",
    "scripts/",
    "LICENSE",
    "README.md"
  ],
  "dependencies": {
    "decimal.js": "^10.6.0"
  },
  "peerDependencies": {
    "playwright": "^1.57.0"
  },
  "peerDependenciesMeta": {
    "playwright": {
      "optional": true
    }
  }
}
